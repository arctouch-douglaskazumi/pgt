<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.dk.pgt.evolve.EvolveViewModel"/>
    </data>

    <merge
        android:id="@+id/form"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <SearchView
            android:id="@+id/pokemonName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:iconifiedByDefault="false"
            android:nextFocusDown="@+id/currentCp"
            android:queryHint="@string/pokemon_name"/>

        <EditText
            android:id="@+id/currentCp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/cp"
            android:inputType="number"
            android:text="@={viewModel.currentCp}"/>

        <Button
            android:id="@+id/evolveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:onClick="@{() -> viewModel.calculateEvolutions()}"
            android:text="@string/evolve"/>
    </merge>
</layout>
